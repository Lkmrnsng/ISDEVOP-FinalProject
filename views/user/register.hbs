<h1>Register</h1>
    <form action="/auth/new" method="POST" enctype="multipart/form-data">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div>
            <label for="phoneNumber">Phone Number:</label>
            <input type="text" id="phoneNumber" name="phoneNumber" required>
        </div>
        <div>
            <label for="universityID">University:</label>
            <select id="universityID" name="universityID" required>
                <option value="" disabled selected>Select your university</option>
                <option value="10001">De La Salle University</option>
            </select>
        </div>  
        <div>
            <label for="enrollmentProof">Enrollment Proof</label>
            <input type="file" id="enrollmentProof" accept="image/*" name="enrollmentProof" required>
        </div>
        <div>
            <label for="profilePicture">Profile Picture URL:</label>
            <input type="file" id="profilePicture" accept="image/*" name="profilePicture"/>
        </div>
        <button type="submit">Register</button>
    </form>

    <a href="/login">Already have an account? Login</a>