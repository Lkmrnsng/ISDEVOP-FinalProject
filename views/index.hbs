<div class="home-wrapper">
    <section class="hero">
        <h1>Built by students for students.</h1>
        <img src="/img/DLSU.jpg" alt="DLSU">

        <!-- To University Form -->
        <div class="hero-input" id="toUniversityForm">
            <form class="ride-search-form" action="/ride/viewRides">
                <label>Pickup</label>
                <select name="pickup" id="pickupTo">
                    <option value="" disabled selected>Home</option>
                    {{#each pickupLocations}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <button type="button" class="switch-button" onclick="switchForm()">↔</button>
                <label>Drop-off</label>
                <select name="dropoff" id="dropoffTo">
                    <option value="" disabled selected>University</option>
                    {{#each dropoffLocations}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <input type="text" id="dateTo" placeholder="Today" name="date">
                <select name="passengers">
                    <option value="1">1 passenger</option>
                    <option value="2">2 passengers</option>
                    <option value="3">3 passengers</option>
                    <option value="4">4 passengers</option>
                </select>
                <button type="submit">Search</button>
            </form>
        </div>

        <!-- From University Form -->
        <div class="hero-input" id="fromUniversityForm" style="display: none;">
            <form class="ride-search-form" action="/ride/viewRides">
                <label>Pickup</label>
                <select name="pickup" id="pickupFrom">
                    <option value="" disabled selected>University</option>
                    {{#each dropoffLocations}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <button type="button" class="switch-button" onclick="switchForm()">↔</button>
                <label>Drop-off</label>
                <select name="dropoff" id="dropoffFrom">
                    <option value="" disabled selected>Home</option>
                    {{#each pickupLocations}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <input type="text" id="dateFrom" placeholder="Today" name="date">
                <select name="passengers">
                    <option value="1">1 passenger</option>
                    <option value="2">2 passengers</option>
                    <option value="3">3 passengers</option>
                    <option value="4">4 passengers</option>
                </select>
                <button type="submit">Search</button>
            </form>
        </div>
    </section>

    <!-- The rest of your sections remain the same -->
</div>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        flatpickr("#dateTo", {
            dateFormat: "Y-m-d",
            defaultDate: "today"
        });
        flatpickr("#dateFrom", {
            dateFormat: "Y-m-d",
            defaultDate: "today"
        });
    });

    function switchForm() {
        const toUniversityForm = document.getElementById('toUniversityForm');
        const fromUniversityForm = document.getElementById('fromUniversityForm');

        if (toUniversityForm.style.display === 'none') {
            toUniversityForm.style.display = 'block';
            fromUniversityForm.style.display = 'none';
        } else {
            toUniversityForm.style.display = 'none';
            fromUniversityForm.style.display = 'block';
        }
    }
</script>
